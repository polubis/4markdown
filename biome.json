{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"*.{ts,tsx,js,jsx,json}",
			"src/**/*.{ts,tsx,js,jsx,json}",
			"cypress/**/*.{ts,tsx,js,jsx,json}",
			".vscode/**/*.{json}"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "off",
				"useExhaustiveDependencies": "off"
			},
			"suspicious": {
				"noShadowRestrictedNames": "off",
				"noArrayIndexKey": "off",
				"noConstEnum": "off",
				"noExplicitAny": "off",
				"noTemplateCurlyInString": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"style": {
				"useImportType": "off",
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"useDateNow": "off",
				"useOptionalChain": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useButtonType": "off",
				"noLabelWithoutControl": "off",
				"noStaticElementInteractions": "off",
				"noSvgWithoutTitle": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	}
}
